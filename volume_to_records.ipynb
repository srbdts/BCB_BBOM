    "import os\n",
    "\n",
    "def split(lines):\n",
    "    pages = []\n",
    "    current = []\n",
    "    for line in lines:\n",
    "        if line.startswith(\"\f",
    "\"):\n",
    "            pages.append(current)\n",
    "            current = [line]\n",
    "        else:\n",
    "            current.append(line)\n",
    "    if len(current) > 0:\n",
    "        pages.append(current)\n",
    "    return pages\n",
    "            \n"
   ]
